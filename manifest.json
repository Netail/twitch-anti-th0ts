{
    "manifest_version": 3,
    "name": "Twitch Anti Th0ts",
    "description": "Blurring Twitch Th0t Streamers",
    "version": "1.1",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [
        "https://*.twitch.tv/*"
    ],
    "background": {
        "service_worker": "./scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "./scripts/content.js"
            ],
            "matches": [
                "https://*.twitch.tv/*"
            ]
        }
    ]
}